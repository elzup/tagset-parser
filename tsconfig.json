{
  "extends": "@elzup/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "lib",
    "baseUrl": ".",
    "declaration": false,
    "types": ["vitest/globals"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/__test__/**/*", "vitest.config.ts", "lib"]
}
